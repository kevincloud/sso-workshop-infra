{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ],
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "outDir": "dist"
    }
  }